<h1>Eat-Da-Burger</h1>

<div class="container">
  <div>
    <div>
      <h2>Burgers to Eat!</h2>
      <p>
        {{#each burgers}}
        {{#unless this.devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </p>
    </div>

    <div>
      <h2>Burgers that have been devoured!</h2>

      <p>
        {{#each burgers}}
        {{#if this.devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </p>
    </div>
  </div>


  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    {{!-- <div class="form-group">
      <input type="radio" name="devoured" value="0"> Make New Burger
    </div> --}}

    <button type="submit" name="devoured" value="0">Add Burger</button>
  </form>

</div>